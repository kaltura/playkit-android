<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helen_round_button_container"
    android:layout_width="@dimen/helen_round_button_width_collapsed"
    android:layout_height="@dimen/helen_round_button_height"
    android:background="@drawable/media_filter_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/helen_round_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:src="@drawable/ic_like_fill"
        android:layout_marginStart="1dp"
    />

</LinearLayout>

