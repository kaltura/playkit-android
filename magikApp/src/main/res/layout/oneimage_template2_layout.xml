<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/oneimage_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/parties"
        android:scaleType="center"
    />


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="bottom|right"
        android:paddingStart="12dp"
        android:layout_marginBottom="22dp"
        android:paddingTop="6dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:paddingBottom="9dp"
    >

        <TextView
            android:id="@+id/oneimage_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coca-Cola\nSummer Love"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
        />


        <TextView
            android:id="@+id/oneimage_image_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/08/16 - 13/08/16\nVenice Beach, LA"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold"
        />

    </LinearLayout>

</FrameLayout>